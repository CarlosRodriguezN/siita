<?xml version="1.0" encoding="utf-8"?>
<install type="component" version="1.0.0">
	<name>com_pei</name>
	<!-- The following elements are optional and free of formatting conttraints -->
	<creationDate>02-07-2013</creationDate>
	<author>Espoch - Ecorae</author>
	<authorEmail>info@espoch.edu.ec</authorEmail>
	<authorUrl>http://www.siita.ecorae</authorUrl>
	<copyright>Copyright (C) 2007 - 2009 </copyright>
	<license>GNU/GPL</license>
	<!--  The version string is recorded in the components table -->
	<version>1.0</version>
	<!-- The description is optional and defaults to the name -->
	<description>Componente para le gestión de los planes estratégicos institucionales del sistema SIITA</description>

	<!-- Site Main File Copy Section -->
	<!-- Note the folder attribute: This attribute describes the folder
      to copy FROM in the package to install therefore files copied
      in this section are copied from /site/ in the package -->
	<files folder="site">
		<filename>controller.php</filename>
		<filename>pei.php</filename>
		<filename>index.html</filename>
		<filename>models/pei.php</filename>
		<filename>models/index.html</filename>
		<filename>views/index.html</filename>
		<filename>views/pei/index.html</filename>
		<filename>views/pei/view.html.php</filename>
		<filename>views/pei/tmpl/default.php</filename>
		<filename>views/pei/tmpl/index.html</filename>
	</files>

	<administration>
		<!-- Administration Menu Section -->
		<menu>Plan Estratégico Institucional!</menu>

		<!-- Administration Main File Copy Section -->
		<files folder="admin">
			<filename>pei.php</filename>
			<filename>index.html</filename>
		</files>  
	</administration>
</install>
