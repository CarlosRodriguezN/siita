<?xml version="1.0" encoding="UTF-8"?>

<form>
   <fieldset name="essential">
        <!-- codigo de la categoria -->
      <field  name            = "intCodigo_pln"
              type            = "hidden"
              label           = "JGLOBAL_FIELD_ID_LABEL"
              description     = "JGLOBAL_FIELD_ID_DESC"
              size            = "10"
              readonly        = "true"
              class           = "readonly"
        />
         <!-- codigo de la institucion -->
      <field  name            = "intCodigo_pn"
              type            = "planesnacionales"
              extension       = "com_plannacional"
              class           = "inputbox"
              default         = ""
              label           = "COM_PLANNACIONAL_FIELD_POLITICANACIONAL_PLANNACIONAL_LABEL"
              description     = "COM_PLANNACIONAL_FIELD_POLITICANACIONAL_PLANNACIONAL_DESC"
              required        = "true">
         <option value="0">PLAN NACIONAL</option>
      </field>
        <!-- codigo de la institucion -->
      
      <field  name            = "intCodigo_ins"
              type            = "objetivosnacionales"
              extension       = "com_plannacional"
              class           = "inputbox"
              default         = ""
              label           = "COM_PLANNACIONAL_FIELD_POLITICANACIONAL_OBJNACIONAL_LABEL"
              description     = "COM_PLANNACIONAL_FIELD_POLITICANACIONAL_OBJNACIONAL_DESC"
              required        = "true">
         <option value="0">OBJETIVO NACIONAL</option>
      </field>
       
         
         <!-- Descripción  />-->
      <field  name              ="strDescripcion_pln" 
              type            ="textarea" 
              default         ="Política Nacional" 
              label           ="COM_PLANNACIONAL_FIELD_POLITICANACIONAL_DESCRIPCION_LABEL" 
              description     ="COM_PLANNACIONAL_FIELD_POLITICANACIONAL_DESCRIPCION_DESC" 
              rows            ="10" 
              cols            ="5"
         />
        <!-- Publicados -->
      <field  name            ="published"
              type            ="list"
              label           ="JSTATUS"
              description     ="JFIELD_PUBLISH_DESC"
              class           ="inputbox"
              filter          ="intval"
              size            ="1"
              default         ="1"
      >
         <option value="1"> JPUBLISHED </option>
         <option value="0"> JUNPUBLISHED </option>
      </field>
   </fieldset>
</form>