            <option value="0">COM_MANTENIMIENTO_FIELD_IND_GRUPO_IND_PADRE_TITLE</option>
        </field>
         
        <!-- Publicados -->
        <field  name            = "published"
                type            = "list"
                label           = "JSTATUS"
                description     = "JFIELD_PUBLISH_DESC"
                class           = "inputbox"
                filter          = "intval"
                size            = "1"
                default         = "1"
        >
            <option value="1"> JPUBLISHED </option>
            <option value="0"> JUNPUBLISHED </option>
        </field>
    </fieldset>
</form>