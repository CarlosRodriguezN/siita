<?xml version="1.0" encoding="UTF-8"?>
<form>
    <fieldset name="periodicidad">
        <!-- codigo de la periodicidad -->
        <field  name            = "intcodigo_per"
                type            = "hidden"
                label           = "JGLOBAL_FIELD_ID_LABEL"
                description     = "JGLOBAL_FIELD_ID_DESC"
        />
        
        <!-- DescripciÃ³n -->
        <field  name            = "strdescripcion_per" 
                type            = "textarea" 
                label           = "COM_MANTENIMIENTO_FIELD_PERIODICIDAD_DESCRIPCION_LABEL" 
                description     = "COM_MANTENIMIENTO_FIELD_PERIODICIDAD_DESCRIPCION_DESC" 
                rows            = "5" 
                cols            = "3"
                required        = "true"
         />
        
        <!-- Codigo de fecha -->
        <field  name            = "idfecha"
                type            = "text"
                label           = "COM_MANTENIMIENTO_FIELD_PERIODICIDAD_FECHA_LABEL"
                description     = "COM_MANTENIMIENTO_FIELD_PERIODICIDAD_FECHA_DESC"
                class           = "inputbox"
                size            = "11"
                required        = "true"
                default         = "1"
        />
         
        <!-- Publicados -->
        <field  name            ="published"
                type            ="list"
                label           ="JSTATUS"
                description     ="JFIELD_PUBLISH_DESC"
                class           ="inputbox"
                filter          ="intval"
                size            ="1"
                default         ="1"
        >
            <option value="1"> JPUBLISHED </option>
            <option value="0"> JUNPUBLISHED </option>
        </field>
    </fieldset>
</form>