<?xml version="1.0" encoding="UTF-8"?>
<form>
    <fieldset name="partida">
        <field  name            = "intIdPartida_pda"
                type            = "hidden"
                label           = "JGLOBAL_FIELD_ID_LABEL"
                description     = "JGLOBAL_FIELD_ID_DESC"
                size            = "10"
                default         = "0"
                readonly        = "true"
                class           = "readonly"
        />
       
        <!-- Codigo -->
        <field  name            ="intCodPartida_pda" 
                type            ="text" 
                label           ="COM_CONTRATOS_FIELD_PARTIDA_CODIGOPDA_LABEL"
                description     ="COM_CONTRATOS_FIELD_PARTIDA_CODIGOPDA_DESC"
                rows            ="10" 
                cols            ="5" 
                required        ="true"
        />
        

        <!-- VALOR -->
        <field  name            ="strNumero_pda" 
                type            ="text" 
                label           ="COM_CONTRATOS_FIELD_PARTIDA_NUMERO_LABEL"
                description     ="COM_CONTRATOS_FIELD_PARTIDA_NUMERO_DESC"
                rows            ="10" 
                cols            ="5" 
                required        ="true"
        />
        <!-- DESCRIPCION  -->
        <field  name            ="strDescripcion_pda" 
                type            ="textarea" 
                label           ="COM_CONTRATOS_FIELD_PARTIDA_DESCPARTIDA_LABEL"
                description     ="COM_CONTRATOS_FIELD_PARTIDA_DESCPARTIDA_DESC"
                rows            ="10" 
                cols            ="5" 
                required        ="true"
        />
        <!-- Publicados -->
        <field  name            ="published"
                type            ="list"
                label           ="JSTATUS"
                description     ="JFIELD_PUBLISH_DESC"
                class           ="inputbox"
                filter          ="intval"
                size            ="1"
                default         ="1"
        >
            <option value="1"> JPUBLISHED </option>
            <option value="0"> JUNPUBLISHED </option>
        </field>
    </fieldset>
</form>